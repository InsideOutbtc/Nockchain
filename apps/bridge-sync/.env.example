# NOCK Bridge State Synchronization Configuration
# Copy this file to .env and configure your settings

# Chain RPC Endpoints
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
NOCKCHAIN_RPC_URL=http://localhost:8545

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_ENCRYPTION_KEY=change_this_in_production_very_important

# Database Configuration
DATA_PATH=./data
DB_CACHE_SIZE=100
DB_COMPRESSION=true
DB_BACKUP_INTERVAL=3600
DB_RETENTION_PERIOD=30

# Synchronization Settings
SYNC_INTERVAL=10000
BATCH_SIZE=100
NOCKCHAIN_CONFIRMATIONS=12
SOLANA_CONFIRMATIONS=32
RETRY_ATTEMPTS=3
RETRY_DELAY=5000
STATE_VERIFICATION_INTERVAL=60000

# Emergency Thresholds
EMERGENCY_SYNC_DELAY=300
EMERGENCY_ERROR_RATE=0.1
EMERGENCY_BLOCK_GAP=100

# Monitoring Configuration
WS_PORT=8081
IO_PORT=8080
BLOCK_TIME_THRESHOLD=30
TX_FAILURE_THRESHOLD=5
SYNC_DELAY_THRESHOLD=60
LIQUIDITY_THRESHOLD=80
BRIDGE_HEALTH_THRESHOLD=70

# Data Retention
METRICS_RETENTION_DAYS=7
ALERT_RETENTION_DAYS=30

# Notifications
NOTIFICATION_EMAILS=admin@nockchain.com,ops@nockchain.com
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
NOTIFICATION_WEBHOOKS=https://your-webhook.com/alerts

# Logging
LOG_LEVEL=info

# Development/Testing (DO NOT USE IN PRODUCTION)
# DEV_MODE=false