# NOCK Bridge Validator Configuration
# Copy this file to .env and configure your validator settings

# Validator Identity
VALIDATOR_ID=validator-001
VALIDATOR_PRIVATE_KEY=your_base58_encoded_private_key_here

# Network Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
NOCKCHAIN_RPC_URL=http://localhost:8545
VALIDATOR_PORT=8080

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_ENCRYPTION_KEY=change_this_in_production_very_important

# Consensus Configuration
CONSENSUS_THRESHOLD=5
TOTAL_VALIDATORS=9

# Security Configuration
SECURITY_LEVEL=military
EMERGENCY_CONTACTS=admin@nockchain.com,security@nockchain.com

# Monitoring & Logging
LOG_LEVEL=info
METRICS_ENABLED=true

# Bridge Configuration
BRIDGE_PROGRAM_ID=your_solana_program_id_here
FEE_RATE=50  # 0.5% in basis points
DAILY_LIMIT=1000000  # 1M NOCK

# Development/Testing (DO NOT USE IN PRODUCTION)
# DEV_MODE=false
# SKIP_SIGNATURE_VERIFICATION=false